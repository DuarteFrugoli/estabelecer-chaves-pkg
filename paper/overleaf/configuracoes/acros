\DeclareAcronym{BPSK}{
	short = BPSK,
	long  = Chaveamento por Deslocamento de Fase Binária,
	foreign = {\emph{Binary Phase Shift Keying}},
}

\DeclareAcronym{BCH}{
	short = BCH,
	long  = Bose--Chaudhuri--Hocquenghem,
}

