%\acsetup{foreign-format = {\emph}}

%%% Numbers

\DeclareAcronym{5G}{
	short = 5G,
	long  = Quinta Geração de Redes Móveis Celulares,
}

\DeclareAcronym{6G}{
	short = 6G,
	long  = Sexta Geração de Redes Móveis Celulares,
}

%%% A

\DeclareAcronym{AC}{
	short = AC,
	long  = Autoridade Certificadora,
	foreign = {\emph{Certification Authority}},
}

\DeclareAcronym{AES}{
	short = AES,
	long  = {\emph{Advanced Encryption Standard}},
}

\DeclareAcronym{AWGN}{
	short = AWGN,
	long  = Ruído Gaussiano Branco Aditivo,
	foreign = {\emph{Additive White Gaussian Noise}},
}

